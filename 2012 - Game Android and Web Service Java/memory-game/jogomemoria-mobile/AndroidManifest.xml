        </activity>
        <activity
            android:name="br.edu.unibratec.pgm.jogomemoria.activities.GameOverActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.edu.unibratec.pgm.jogomemoria.activities.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="br.edu.unibratec.pgm.jogomemoria.activities.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="br.edu.unibratec.pgm.jogomemoria.activities.RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>
    </application>

